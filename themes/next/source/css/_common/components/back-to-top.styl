.back-to-top {
  box-sizing: border-box;
  position: fixed;
  bottom: $b2t-position-bottom;
  right: $st-position-left-right + 26;
  z-index: $zindex-5;
  padding: 0 6px;
  width: hexo-config('sidebar.scrollpercent') ? initial : 24px;
  background: $b2t-bg-color;
  font-size: $b2t-font-size;
  opacity: $b2t-opacity;
  color: $b2t-color;
  cursor: pointer;
  text-align: center;
  box-shadow: 0.475em 0.375em 0.75em 0 #222;
  -webkit-transform: translateZ(0);
  transition-property: bottom;
  the-transition();

  +mobile() {
    display: none;
  }
  +tablet() {
    display: none;
  }

  &.back-to-top-on {
    bottom: $b2t-position-bottom-on + 10;
  }
}
