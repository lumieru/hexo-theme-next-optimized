.post-button {
  margin-top: 50px;

  .btn {
    color: $read-more-color;
    font-size: $read-more-font-size;
    background: $read-more-bg-color;
    border-radius: 6px;
    line-height: 2;
    margin: 0 4px 8px 4px;
    border:2px solid #e1e1e1!important;
    padding: 0 20px;
  }
  .btn:hover {
    /* @extend .btn:hover; */
    color:#fff!important;
    background: #e1e1e1
  }
  .fa-fw {
    width: (18em / 14);
    text-align: left;
  }
}
